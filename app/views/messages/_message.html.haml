.message-side__contents__box
  .message-side__contents__box__user
    .message-side__contents__box__user__name 
      = message.user.name
    .message-side__contents__box__user__create-at 
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message-side__contents__box__text 
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?